<h1>Last 25 Posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Created on</th>
    <th>Updated on</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr class="subRow">
    <td><%= post.title %></td>
    <td><%= truncate(post.body, :length => 50, :separator => ' ') %></td>
    <td><%= post.created_on.strftime("%I:%M%p %m/%d/%Y") %></td>
    <td><%= post.updated_on.strftime("%I:%M%p %m/%d/%Y") %></td>
    <td><%= post.user.first_name+" "+post.user.last_name %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>


<br />
<%= link_to 'New Post', new_post_path %>
