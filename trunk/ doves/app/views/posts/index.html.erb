<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Created on</th>
    <th>Updated on</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr class="subRow">
    <td><%= post.title %></td>
    <td><%= post.body[0..64] %></td>
    <td><%= post.created_on.strftime("%I:%M%p %m/%d/%Y") %></td>
    <td><%= post.updated_on.strftime("%I:%M%p %m/%d/%Y") %></td>
    <td><%= post.user_id %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
