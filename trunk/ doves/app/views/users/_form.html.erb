      <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <div class="subLabel black">
    <span>Password</span>
    <%= f.password_field :password %>
  </div>
   <br>
  <div class="subLabel black"> 
	<span>Confirm Password</span>
	<%= f.password_field :password_confirmation%> 
  </div>
  <br>
  <div class="subLabel black">
    <span>First Name</span>
    <%= f.text_field :first_name %>
  </div>
  <br>
  <div class="subLabel black">
    <span>Last Name</span>
    <%= f.text_field :last_name %>
  </div>
  <br>
  <div class="subLabel black">
    <span>Phone Number</span>
    <%= f.text_field :phone %>
  </div>
  <br>
  <div class="subLabel black">
    <span>Address</span>
    <%= f.text_field :address_line1 %>
  </div>
  <br>
  <div class="subLabel black">
    <span>Address 2</span>
    <%= f.text_field :address_line2 %>
  </div>
  <br>
  <div class="subLabel black">
    <span>City</span>
    <%= f.text_field :city %>
  </div>
  <br>
  <div class="subLabel black">
    <span>State</span>
    <%= f.text_field :state %>
  </div>
  <br>
  <div class="subLabel black">
    <span>Zip Code</span>
    <%= f.text_field :zip %>
  </div>
  <br>
  <div class="subLabel black">
    <span>Email</span>
    <%= f.text_field :email %>
  </div>
