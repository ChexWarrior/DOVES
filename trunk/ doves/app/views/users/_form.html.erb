 <% end %>
  <div class="actions">
    <% if params[:action]=='edit' %>
    <%= f.submit "Edit",:class=>"btn-custom" %>
	 <% else %>
	<%= f.submit "Register",:class=>"btn-custom" %>
	<% end%>
  </div>
<% end %>
