<div class= "Sign_Form">
<h1>Log in</h1>

<% if flash[:notice] %>
    <span class="notice"><%= flash[:notice] %></span>
  <% end %>
  <% if flash[:error] %>
    <span class="error"><%= flash[:error] %></span>
	  <% end %>

<%= form_tag(:action => 'login_attempt') do %>
<p>Email:</br> <%= text_field_tag(:email) %></p>
<p>Password:</br> <%= password_field_tag :login_password %></p>
<%= submit_tag("Log In") %><br>
<% end %>
</br>Don't have your own profile?<br>
<%= button_to 'Register Here', new_user_path, :method => :get, :action => 'new' %>
</div>