<% if isadmin? %>
<%= link_to 'Back to Admin Tools', admin_pages_path %>
<%end%>

<h1>Search </h1>

<%= form_tag search_submissions_path, :method => 'get' do %>
	<%= select_tag :field, options_for_select(search_params, params[:field]) %>
     <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %> 
	  <input type="reset"/>
<% end %> 
<% if (!params[:search].nil?) then %>
<% if (@submissions.length > 0) then%>
 <div id="search">
    <%= render :file => 'submissions/index' %>
 </div>
 <% else %><br><br>
 <div>No Results</div>
 <% end %>
 <% end %>